<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nav3Profile"
    android:visibility="gone">
    <TextView
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:text="个人中心"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        />
    <View
        android:id="@+id/titleBarBottomLine"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/white"
        android:layout_below="@id/titleBar"/>
    <RelativeLayout
        android:id="@+id/redZone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingBottom="30dp"
        android:layout_below="@id/titleBarBottomLine"
        >
        <RelativeLayout
            android:id="@+id/noLoginZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">
            <Button
                android:id="@+id/btnLogin"
                android:layout_marginTop="40dp"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="登录"
                android:background="@drawable/shape_btn_login"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/registerBtn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="没有账号？快速注册 >"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/btnLogin"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:textSize="13dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/btnLogin"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="20dp"
                        android:src="@drawable/wechat_white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="微信登录"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginLeft="2dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="15dp"
                        android:src="@drawable/weibo_white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="微博登录"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginLeft="2dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="18dp"
                        android:src="@drawable/qq_white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="QQ登录"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginLeft="2dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/hasLoginZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible">
            <ImageView
                android:id="@+id/userIcon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/doge"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                />
            <TextView
                android:id="@+id/userNickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="呵呵"
                android:layout_alignTop="@id/userIcon"
                android:layout_toRightOf="@id/userIcon"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:textSize="25dp"
                />
            <TextView
                android:id="@+id/userRegisterTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="注册于 2016-01-01 12:10:10"
                android:layout_alignBottom="@id/userIcon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:textStyle="italic"
                />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/section1"
        android:layout_below="@id/redZone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_profile_section_background"
        android:layout_marginTop="-20dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="我关注的"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/lightGrey"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/eee"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="我的粉丝"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/lightGrey"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/section2"
        android:layout_below="@id/section1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_profile_section_background"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/read"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阅读"
                android:textSize="13dp"
                android:textColor="@color/lightGrey"/>
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/eee"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:src="@drawable/nav_star_default"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textSize="13dp"
                android:textColor="@color/lightGrey"/>
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/eee"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:src="@drawable/comment_edit"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跟帖"
                android:textSize="13dp"
                android:textColor="@color/lightGrey"/>
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/eee"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="13dp"
                android:layout_height="25dp"
                android:src="@drawable/coin"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金币"
                android:textSize="13dp"
                android:textColor="@color/lightGrey"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/section2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_profile_section_background"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/edit"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:id="@+id/updatePassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="修改密码"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/eee"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/comment"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="最新动态"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/eee"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/logout"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="退出登录"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>