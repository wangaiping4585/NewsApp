<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >
    <ImageView
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/doge"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="火星网友"
        android:layout_alignTop="@+id/icon"
        android:layout_toRightOf="@+id/icon"
        android:layout_marginLeft="10dp"
        android:textColor="@color/blue"/>
    <TextView
        android:id="@+id/commentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-01-01 21:01:10"
        android:layout_below="@id/nickname"
        android:layout_alignLeft="@id/nickname"
        android:layout_marginTop="3dp"
        android:textSize="12dp"
        />
    <TextView
        android:id="@+id/commentContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="勿忘国耻"
        android:textColor="@color/black"
        android:layout_below="@id/commentTime"
        android:layout_alignLeft="@id/nickname"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="18dp"
        android:textSize="17sp"
        android:layout_marginTop="13dp"
        android:lineSpacingExtra="6dp"
        />
    <TextView
        android:id="@+id/upCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="910赞"
        android:layout_alignTop="@id/nickname"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        />
    <View
        android:id="@+id/borderBottom"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/ccc"
        android:layout_below="@+id/commentContent"
        android:layout_alignLeft="@id/nickname"
        android:layout_alignRight="@id/upCount"
        />
</RelativeLayout>