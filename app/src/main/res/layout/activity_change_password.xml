<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <TextView
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:text="注册"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleBar"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_profile_section_background"
                android:layout_marginTop="40dp"
                >
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="修改密码"
                    android:textColor="@color/black"
                    android:textSize="32dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    />
                <View
                    android:id="@+id/titleLine"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/eee"
                    android:layout_below="@id/title"
                    />
                <EditText
                    android:id="@+id/oldPwdTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入原密码"
                    android:textColorHint="@color/ccc"
                    android:layout_below="@+id/titleLine"
                    android:layout_marginTop="15dp"
                    android:background="@null"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />
                <View
                    android:id="@+id/usernameLine"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/darkBlue"
                    android:layout_below="@id/oldPwdTxt"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />
                <EditText
                    android:id="@+id/newPwdTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入新密码"
                    android:textColorHint="@color/ccc"
                    android:layout_below="@id/usernameLine"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:inputType="textPassword"
                    />
                <View
                    android:id="@+id/passwordLine"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/darkBlue"
                    android:layout_below="@id/newPwdTxt"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />
                <EditText
                    android:id="@+id/rePwdTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="确认密码"
                    android:textColorHint="@color/ccc"
                    android:layout_below="@id/passwordLine"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:inputType="textPassword"
                    />
                <View
                    android:id="@+id/rePasswordLine"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/darkBlue"
                    android:layout_below="@id/rePwdTxt"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />
                <Button
                    android:id="@+id/changePwdBtn"
                    android:layout_below="@id/rePasswordLine"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:text="确认修改"
                    android:background="@drawable/shape_reply_background"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>