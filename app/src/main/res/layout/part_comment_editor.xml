<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/commentEditAvatar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/eee"
            />
        <ImageView
            android:id="@+id/penIcon"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:src="@drawable/comment_edit"
            android:layout_marginLeft="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="发表评论"
            android:textSize="14sp"
            android:textColor="@color/aaa"
            android:layout_toRightOf="@id/penIcon"
            android:layout_alignBottom="@id/penIcon"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:id="@+id/commentCount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1231"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentRight="true"
            android:paddingRight="20dp"
            android:textStyle="normal"
            android:onClick="toCommentArea"/>
        <ImageView
            android:id="@+id/commentIcon"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/comment"
            android:layout_toLeftOf="@id/commentCount"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:onClick="toCommentArea"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/ccc"
            android:layout_below="@id/penIcon"
            android:layout_toLeftOf="@id/commentIcon"
            android:layout_marginTop="-8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="12dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/commentEditor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:visibility="gone"
        >
        <View
            android:id="@+id/topLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/eee"
            />
        <TextView
            android:id="@+id/replyTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="回复  呵呵呵："
            android:textSize="18dp"
            android:layout_below="@id/topLine"
            android:layout_marginLeft="20dp"
            android:paddingTop="9dp"
            android:layout_marginBottom="-7dp"
            android:visibility="gone"
            />
        <EditText
            android:id="@+id/commentEditContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入评论内容"
            android:textColorHint="@color/ccc"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="68dp"
            android:minLines="1"
            android:background="@null"
            android:paddingTop="12dp"
            android:paddingLeft="5dp"
            android:layout_below="@+id/replyTo"
            />
        <Button
            android:id="@+id/commentBtn"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="评论"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/shape_btn_disabled"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/commentEditContent"
            android:layout_marginBottom="-2dp"
            android:enabled="false"
            android:visibility="visible"
            />
    <View
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/blue"
        android:layout_below="@id/commentEditContent"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="7dp"
        android:layout_toLeftOf="@id/commentBtn"
        android:layout_alignLeft="@id/commentEditContent"
        android:layout_alignRight="@id/commentEditContent"/>
    </RelativeLayout>

</RelativeLayout>